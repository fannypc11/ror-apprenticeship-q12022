<div class="row d-flex justify-content-md-center mb-5">
  <div class="d-flex justify-content-md-center col-md-3 col-xs-12">
    <h3><%= @title %></h3>
  </div>
</div>
<div class="row d-flex justify-content-md-center mb-5">
<div class="col-md-5">
  <%= form_with model: @pokemon do |f| %>
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="inputCity">Name</label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="inputCity">Base Experience</label>
        <%= f.number_field :base_experience, class: 'form-control' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-12">
        <label for="inputCity">Height</label>
        <%= f.number_field :height, class: 'form-control' %>
      </div>
    </div>
    <%= f.submit "Add", class: "btn btn-primary" %>
    <%= link_to('Cancel', pokemons_path, :class => "btn btn-danger")%>
  <% end %>
</div>
</div>




